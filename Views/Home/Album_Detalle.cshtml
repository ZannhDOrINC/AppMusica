@model AppMusicaV1.Models.ViewModels.AlbumVM
@{
    ViewData["Title"] = "Album_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.oAlbum.IdAlbum == 0)
{
    <h1>Registro de Álbum</h1>
}
else
{
    <h1>Editar Álbum</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Album_Detalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oAlbum.IdAlbum" />

            <div class="mb-2">
                <label class="form-label" asp-for="oAlbum.NombreArtista">Artista</label>
                <input class="form-control form-control-sm" asp-for="oAlbum.NombreArtista" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oAlbum.Titulo">Título del Álbum</label>
                <input class="form-control form-control-sm" asp-for="oAlbum.Titulo" type="text" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oAlbum.anioLanzamiento">Año en que se lanzó</label>
                <input class="form-control form-control-sm" asp-for="oAlbum.anioLanzamiento" type="number" />
            </div>

            <div class="mb-2">
                <label class="form-label" asp-for="oAlbum.anioLanzamiento"># de Canciones</label>
                <input class="form-control form-control-sm" asp-for="oAlbum.anioLanzamiento" type="number" />
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="oAlbum.IdGenero">Género Musical</label>
                <select class="form-label" asp-for="oAlbum.IdGenero" asp-items="@Model.oListaGenero">
                    <option selected disabled>-- Seleccionar --</option>
                </select>
            </div>

            <div class="mb-2">
                @if (Model.oAlbum.IdAlbum == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Registrar</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">Volver</a>
            </div>

        </form>
    </div>
</div>